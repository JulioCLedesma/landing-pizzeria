{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": ".",                 // <-- necesario para paths
    "paths": {
      "@/*": ["src/*"],             // <-- alias para TS
      "@": ["src"]
    },
    "types": ["vite/client"]        // <-- tipos de Vite
  },
  "include": ["src"]
}
